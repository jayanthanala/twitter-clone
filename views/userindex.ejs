<%- include('partials/header') %>
<div class="">
  <form class="" action="/search" method="post">
    <input type="text" name="username" value="">
    <button type="submit" name="button">Search</button>
  </form>
</div>

  <% if(user.id){ %>
    <h1><%=user.name%></h1>
    <p><%=user.email%></p>
  <%}%>



  <a href="/logout" class="btn btn-small">Logout</a>

  <form class="" action="/bitter/<%=user.id%>/tweets" method="post">
    <input type="text" name="tweet" value="" placeholder="What's around you......?">
    <button type="submit" name="button">Tweet</button>
  </form>
  
<!-- only tweets wont be false! tweets[0] will give false ! -->
<% if(tweets[0]){%>
  <% tweets.forEach((tweet) => { %>
      <hr>
      <div class="">
        <p><%=tweet.content%></p>
      </div>
      <form class="" action="/delete" method="post">
          <button type="submit" name="button" value="<%=tweet._id%>">Delete</button>
      </form>
      <form class="" action="/delete" method="post">
          <button type="button" name="button" value=<%=tweet._id%>>Update</button>
      </form>
      <hr>
  <%})%>
<%}else{ %>
  <h4>No tweets found!</h4>
<% }%>












<%- include('partials/footer') %>
